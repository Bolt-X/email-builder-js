    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2020",
    "module": "esnext",
    "outDir": "dist",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "/",
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "exclude": [
    "dist"
  ]
}